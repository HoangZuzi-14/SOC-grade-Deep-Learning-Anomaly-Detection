[flake8]
# Maximum line length
max-line-length = 127

# Exclude directories
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    build,
    dist,
    *.egg-info,
    node_modules,
    .pytest_cache,
    .coverage,
    htmlcov,
    .mypy_cache,
    .tox

# Ignore specific errors
ignore =
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by other tools)

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401

# Maximum complexity
max-complexity = 10

# Show source
show-source = True

# Statistics
statistics = True
